<header class="bg-white shadow-lg">
    <div class="relative mt-4 md:mt-0">
        <form action="/events" method="GET" class="flex items-center">
            <input type="text" name="search" placeholder="Search events..." class="w-full px-3 py-2 border rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-r-lg">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8 flex justify-between items-center">
        <button class="md:hidden text-gray-500 hover:text-gray-600" @click="open = !open">
            <i class="fas fa-bars text-xl"></i>
        </button>
        <h1 class="text-3xl font-bold text-gray-900 hidden md:block">
            <%= typeof title !== 'undefined' ? title : 'Event Management System' %>
        </h1>
        <div class="flex items-center">
            <% if (currentUser) { %>
                <a href="/users/profile" class="flex items-center text-gray-600 hover:text-gray-900 mr-4">
                    <img src="<%= currentUser.profilePicture %>" alt="<%= currentUser.name %>" class="w-8 h-8 rounded-full mr-2">
                    <%= currentUser.username %>
                </a>
                <a href="/auth/logout" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                </a>
            <% } else { %>
                <a href="/auth/login" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-2">
                    <i class="fas fa-sign-in-alt mr-2"></i> Login
                </a>
                <a href="/auth/register" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                    <i class="fas fa-user-plus mr-2"></i> Register
                </a>
            <% } %>
        </div>
    </div>
</header>